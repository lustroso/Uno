colordefecto =#f4e224
grisOscuro=#444
grisClaro= #e8e8e8
grisTexto =#7a7a7a
azul=#22bce0
naranja=#dd4f24
a 
	color naranja

body
	background grisClaro
	color grisOscuro
	font-family arial
	font-size 16px

footer
	background naranja
	color rgba(white, 0.5)
	text-align center
	position absolute
	bottom 0
	width 100%
	h3
		margin 0
		font-size 14px
		font-weigth normal
		strong
			display block
			
		.justion
			&:after
			&:before
				content " - "

			
				
				
			



header
	background grisOscuro
	color white
	padding 0.5em
	position relative
	overflow hidden
	
	.logo
		border-right 1px solid azul
		width 60px

		img 
			width 52px

	.titular
		margin 0 80px 0 70px
		.titulo
			font-size 18px
			font-weigth normal
		.filtro
			color azul
			text-decoration none
			font-weigth bold
			font-style italic
		.publicar
			background naranja
			color white
			float right
			font-style italic
			margin -5px 1em 0 0 
			padding 0.2em 0.5em
			text-decoration none
			text-shadow 1px 1px 5px black
	.usuario
		position absolute
		top 10px
		right 10px
	
		
		.avatar
			margin 0 1em 0 0
			position relative
			z-index 2
			img
				
				border-radius 50%
				width 50px
				
		.flechita
			background naranja
			color white
			display block
			right 0
			top 15px
			padding 3px
			position absolute
			text-align right
			width 2em
nav
	background azul
	position relative
	border-left 1em solid white
	height 2em
	&:before
		content ""
		border-left 0.5em solid white
		border-top 1em solid transparent
		border-bottom 1em solid transparent
		position absolute
		top 0
		left 0

	.menu
		

		height 2em
		line-height 2em
		margin 0
		padding 0 0 0 1.5em
		overflow-x auto
		white-space nowrap


		li 
			display inline-block
			a

				color white
				display inline-block
				margin 0 0.5em
				padding 0.2em
				text-decoration none
			

.posts
	
	padding .5em


	.post
		background white
		border-radius 0 0 .5em .5em
		box-shadow 2px 2px 10px rgba(black,0.5)
		color grisTexto
		.acciones
			border-top 3px solid azul
			padding .5em
			overflow hidden

			.votos
				float left
				.down
					
					text-decoration none 
				.up
					text-decoration none
				

			.datos
				float right
				.comentarios
					background grisTexto
					border-radius 3px
					color white
					text-decoration none
					padding 2px 5px
					margin 0 1em 0 0

				
				.estrellitas
					color red
					


			
			
		.description
			overflow hidden
			.detalles
				height 160px
				margin-left 8em
				.autor
					margin 0.5em 0 2em 0

					a 
						text-decoration none
				.tag 
					background azul
					color white
					text-decoration none
					padding 0.2em 0.5em
					border-radius 0.5em

				.titulo
					font-size 18px
					font-style italic
					color grisOscuro
					margin 0
					padding 0.5em 0.5em 0 0
				.fecha 
					float right
					margin 0 1em 0 0

			.imagen
				float left
				img
					width 120px
					vertical-align top

			
		




.left
	float left

.right
	float right